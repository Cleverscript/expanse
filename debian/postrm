#!/bin/sh
# postrm script for test
#
# see: dh_installdeb(1)

# set -x

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    purge|remove)
      # remove host config in NGINX
      EXPHOSTNAME=$(cat /etc/expanse/config_expanse)

      if [ ! -z $EXPHOSTNAME ]; then

        rm -f /etc/nginx/sites-available/${EXPHOSTNAME}.conf
        unlink /etc/nginx/sites-enabled/${EXPHOSTNAME}.conf

        # reload NGINX configs
        NGINXT=$(sudo nginx -t >/dev/null ; echo $?)
        if [ $NGINXT -eq 0 ]; then
            rm -rf /var/www/${EXPHOSTNAME}
            rm -rf /etc/expanse
            invoke-rc.d nginx reload
            #systemctl reload nginx
            exit 0
        fi

      else
        echo "Error - not received value EXPHOSTNAME!"
      fi
    ;;	    
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
